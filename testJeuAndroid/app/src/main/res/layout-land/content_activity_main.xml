<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.moreauhu.testjeu.MainActivity"
    tools:showIn="@layout/app_bar_futur_main">
    >

    <TableLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0,1">

        <TableRow>
            <RelativeLayout
                android:id="@+id/layout_prepare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/label_prepare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:text="@string/label_prepare"
                    android:textSize="@dimen/label" />

                <TextView
                    android:id="@+id/number_prepare"
                    android:layout_width="@dimen/label_time"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_prepare"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/initial_number"
                    android:textSize="@dimen/time" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_prepare"
                    android:layout_toLeftOf="@id/number_prepare"
                    android:layout_toStartOf="@id/number_prepare"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_remove_circle"
                    android:onClick="onClickOnMinus" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_prepare"
                    android:layout_toEndOf="@id/number_prepare"
                    android:layout_toRightOf="@id/number_prepare"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_add_circle"
                    android:onClick="onClickOnPlus"
                    android:text="@string/button_plus" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_prepare">

                <TextView
                    android:id="@+id/label_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:text="@string/label_work"
                    android:textSize="@dimen/label" />

                <TextView
                    android:id="@+id/number_work"
                    android:layout_width="@dimen/label_time"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_work"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/initial_number"
                    android:textSize="@dimen/time" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_work"
                    android:layout_toLeftOf="@id/number_work"
                    android:layout_toStartOf="@id/number_work"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_remove_circle"
                    android:onClick="onClickOnMinus" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_work"
                    android:layout_toEndOf="@id/number_work"
                    android:layout_toRightOf="@id/number_work"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_add_circle"
                    android:onClick="onClickOnPlus" />

            </RelativeLayout>
        </TableRow>

        <TableRow>


            <RelativeLayout
                android:id="@+id/layout_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/label_rest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:text="@string/label_rest"
                    android:textSize="@dimen/label" />

                <TextView
                    android:id="@+id/number_rest"
                    android:layout_width="@dimen/label_time"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_rest"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/initial_number"
                    android:textSize="@dimen/time" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_rest"
                    android:layout_toLeftOf="@id/number_rest"
                    android:layout_toStartOf="@id/number_rest"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_remove_circle"
                    android:onClick="onClickOnMinus" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_rest"
                    android:layout_toEndOf="@id/number_rest"
                    android:layout_toRightOf="@id/number_rest"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_add_circle"
                    android:onClick="onClickOnPlus" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_cycles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_rest"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/label_cycles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:text="@string/label_cycles"
                    android:textSize="@dimen/label" />

                <TextView
                    android:id="@+id/number_cycles"
                    android:layout_width="@dimen/label_time"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_cycles"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/initial_number"
                    android:textSize="@dimen/time" />


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_cycles"
                    android:layout_toLeftOf="@id/number_cycles"
                    android:layout_toStartOf="@id/number_cycles"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_remove_circle"
                    android:onClick="onClickOnMinus" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_cycles"
                    android:layout_toEndOf="@id/number_cycles"
                    android:layout_toRightOf="@id/number_cycles"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_add_circle"
                    android:onClick="onClickOnPlus" />

            </RelativeLayout>

        </TableRow>
    </TableLayout>




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="onClickStart"
        android:text="@string/button_start"
        android:textSize="@dimen/button" />

</RelativeLayout>